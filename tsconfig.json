{
    "compilerOptions": {
        "esModuleInterop": true,
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "target": "ES2017",
        "rootDir": "src",
        "outDir": "./dist",
        "preserveConstEnums": true,
        "removeComments": false,
        "strictNullChecks": false,
        "sourceMap": true,
        "baseUrl": "./",
    },
    "include": [
        "src"
    ]
}